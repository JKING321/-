<h1>家的味道 · 今天吃什么</h1>
<div id="result">点击按钮抽签吧~</div>
<button id="drawBtn">抽一签</button>
<div id="tip">家，是最温暖的港湾</div>

<footer>愿每一天都充满家的味道 ❤️</footer>

<script>
const dishes = [
    "红烧肉配米饭","清蒸鱼","麻辣火锅","西红柿炒蛋",
    "宫保鸡丁","家常豆腐","牛肉面","蛋炒饭",
    "烤鸭","春卷","小炒黄牛肉","番茄牛腩汤",
    "炸酱面","蒜蓉粉丝蒸扇贝"
];

// 温暖文案
const tips = [
    "再忙都要好好吃饭",
    "家，是最温暖的港湾",
    "每一口都是家的味道",
    "吃饭也是一种幸福",
    "慢慢享受温暖时光",
    "今天也要开心用餐",
    "家的味道，让心安定"
];

const result = document.getElementById("result");
const btn = document.getElementById("drawBtn");
const tipDiv = document.getElementById("tip");

// 倒数语音
const speech = (text) => {
    const utter = new SpeechSynthesisUtterance(text);
    utter.lang = 'zh-CN';
    speechSynthesis.speak(utter);
}

// 光点特效
const createParticle = () => {
    const particle = document.createElement('div');
    particle.classList.add('particle');
    particle.style.width = particle.style.height = Math.random()*10+5+'px';
    particle.style.background = `rgba(255,${Math.floor(Math.random()*200+55)},0,0.7)`;
    particle.style.left = Math.random()*window.innerWidth+'px';
    particle.style.top = window.innerHeight+'px';
    document.body.appendChild(particle);
    setTimeout(()=>particle.remove(),4000);
}

// 抽签逻辑
btn.addEventListener("click", async () => {
    result.innerText = "准备中...";
    result.style.transform = "scale(1.2)";
    
    for(let i=3;i>0;i--){
        speech(i.toString());
        result.innerText = i;
        await new Promise(r=>setTimeout(r,1000));
        createParticle();
    }

    const index = Math.floor(Math.random() * dishes.length);
    result.innerText = dishes[index];
    result.style.transform = "scale(1.3)";
    result.style.color = "#ff6b00";
    setTimeout(()=> result.style.transform="scale(1)",500);

    // 随机温暖文案
    const tipIndex = Math.floor(Math.random()*tips.length);
    tipDiv.innerText = tips[tipIndex];
});
</script>
</body>
